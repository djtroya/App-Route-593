  <header>
    <h1>Route 593</h1>
    <p>Tu taxi rápido y seguro</p>
  </header>
  <form id="taxiForm">
    <input type="text" id="origen" placeholder="Punto de partida" required />
    <input type="text" id="destino" placeholder="Destino" required /><select id="vehiculo">
  <option value="sedan">Sedán</option>
  <option value="suv">SUV</option>
  <option value="mototaxi">Mototaxi</option>
</select>

<select id="pago">
  <option value="efectivo">Efectivo</option>
  <option value="transferencia">Transferencia</option>
  <option value="tarjeta">Tarjeta</option>
</select>

<div class="price" id="priceDisplay">Tarifa estimada: -</div>

<button type="button" onclick="calcularTarifa()">Calcular Tarifa</button>
<button type="button" onclick="enviarWhatsApp()">Pedir por WhatsApp</button>

  </form>  <script>
    function calcularTarifa() {
      const vehiculo = document.getElementById('vehiculo').value;
      let tarifa = 0;

      switch (vehiculo) {
        case 'sedan': tarifa = 5; break;
        case 'suv': tarifa = 7; break;
        case 'mototaxi': tarifa = 3; break;
      }

      document.getElementById('priceDisplay').innerText = `Tarifa estimada: $${tarifa} USD`;
    }

    function enviarWhatsApp() {
      const origen = document.getElementById('origen').value;
      const destino = document.getElementById('destino').value;
      const vehiculo = document.getElementById('vehiculo').value;
      const pago = document.getElementById('pago').value;
      const precio = document.getElementById('priceDisplay').innerText;

      const mensaje = `Hola, quiero solicitar un servicio de taxi:\n\n- Origen: ${origen}\n- Destino: ${destino}\n- Vehículo: ${vehiculo}\n- Pago: ${pago}\n- ${precio}`;

      const url = `https://wa.me/?text=${encodeURIComponent(mensaje)}`;
      window.open(url, '_blank');
    }
  </script></body>
</html>
